{{!< default}}

{{#post}}

{{#if image}}
{{> "header-post-cover"}}
{{else}}
{{> "header-blog-post"}}
{{/if}}

<main>
  <article class="{{post_class}} site-width">
    {{#unless image}}
    <header>
      <h1 class="post-title">{{title}}</h1>
      <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="dddd, MMMM DD, YYYY"}}</time>
    </header>
    {{/unless}}

    <div>
      {{content}}
    </div>
    <hr style="margin-top: 2em;" />
    <p style="margin-top: 1em; text-align: center">
      <b style="font-size: .8em;">讨论请发邮件到 randypriv@gmail.com</b>
      <br />
      <b style="font-size: .8em;">未经授权，禁止转载</b>
    </p>
  </article>
</main>
{{/post}}
