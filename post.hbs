{{!< default}}

{{#post}}

{{#if image}}
{{> "header-post-cover"}}
{{else}}
{{> "header-blog-post"}}
{{/if}}

<main>
  <article class="{{post_class}} site-width">
    {{#unless image}}
    <header>
      <h1 class="post-title">{{title}}</h1>
      <time datetime="{{date format='YYYY-MM-DD'}}">{{date format="dddd, MMMM DD, YYYY"}}</time>
    </header>
    {{/unless}}

    <div>
      {{content}}
    </div>
  </article>
</main>
{{/post}}
