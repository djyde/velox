<div class="my-fancy-nav-wrapper site-width" style="text-align: center;">
    <ul class="nav" style="list-style-type: none; margin: 0; padding: 0; margin-top: 2rem;">
        <!-- Loop through the navigation items -->
        {{#foreach navigation}}
        <li style="display: inline-block; margin-left: 12px; margin-right: 12px;" class="nav-{{slug}}{{#if current}} nav-current{{/if}}"><a href="{{url absolute="true"}}">{{label}}</a></li>
        {{/foreach}}
        <!-- End the loop -->
    </ul>
</div>
